<%= render partial: 'admin/dashboard/home' %>
<div class="col-lg-8 main">     
    <div class="row">
      <ol class="breadcrumb">
        <li><a href="/admin/home"><span class="glyphicon glyphicon-home" aria-hidden="true"></span></a></li>
        <li class="active"><%= @users.table_name %></li>
      </ol>
    </div>
    <div class="row">
      <div class="col-lg-12">
        <h1 class="page-header"><%= @users.table_name %></h1>
        <table class="table table-hover">
  <thead>
    <tr>
      <th>ID</th>
      <th>Email</th>
      <th>First Name </th>
      <th>Last Name </th>
      <th>City</th>
      <th>Mobile No</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td>
          <%= link_to user.id, admin_user_path(user.id) %>
        </td>
        <td>
          <%= user.email %>
        </td>
        <td>
          <%= user.first_name  %>
        </td>
        <td>
          <%= user.last_name %>
        </td>
        <td>
          <%= user.city %>
        </td>
        <td>
          <%= user.mobile_number %>
        </td>
        <td>
          <%= link_to admin_user_path(user.id) do %>
            <span class="glyphicon glyphicon-eye-open"></span>
          <% end %>
          |
          <%= link_to edit_admin_user_path(user.id) do %>
            <span class="glyphicon glyphicon-pencil"></span>
          <% end %>
          |
          <%= link_to admin_user_path(user.id), method: :delete, data: {confirm: "Are you Sure ?"}  do %>
            <span class="glyphicon glyphicon-trash"></span>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<strong>
  <%= will_paginate @users   %>
</strong>
<%= link_to new_admin_user_path, class: "btn btn-info" do    %>
  <i class="glyphicon glyphicon-plus"></i>
  <strong>Add User</strong>
<% end %>
      </div>
    </div>
      </div>
    </div><!--/.row-->
        