.panel.panel-primary
  .panel-heading 
    %h3 
      %strong Listing Users
  .panel-body
    %table.table.table-hover
      %thead
        %tr
          %th ID
          %th Email
          %th First Name 
          %th Last Name 
          %th City
          %th Mobile No
          %th Actions
      %tbody
        - @users.each do |user|
          %tr
            %td 
              = link_to user.id, admin_user_path(user.id)
            %td 
              = user.email
            %td 
              = user.first_name 
            %td 
              = user.last_name
            %td 
              = user.city
            %td 
              = user.mobile_number
            %td
              = link_to admin_user_path(user.id) do
                %span.glyphicon.glyphicon-eye-open
              |
              = link_to edit_admin_user_path(user.id) do
                %span.glyphicon.glyphicon-pencil
              |
              = link_to admin_users_path(user.id), method: :delete, data: {confirm: "Are you Sure ?"}  do
                %span.glyphicon.glyphicon-trash 

    %strong 
      = will_paginate @users  
      
    = link_to new_admin_user_path, class: "btn btn-info" do   
      %i.glyphicon.glyphicon-plus
      %strong Add User