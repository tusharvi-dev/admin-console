<%= render partial: 'admin/dashboard/home' %>
<div class="col-lg-8 main">     
    <div class="row">
      <ol class="breadcrumb">
        <li><a href="/admin/home"><span class="glyphicon glyphicon-home" aria-hidden="true"></span></a></li>
        <li class="active"><%= @roles.table_name %></li>
      </ol>
    </div>
    <div class="row">
      <div class="col-lg-12">
        <h1 class="page-header"><%= @roles.table_name %></h1>
        <table class="table table-hover">
          <thead>
            <tr>
              <th>ID</th>
              <th>Name </th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @roles.each do |role| %>
              <tr>
                <td>
                  <%= link_to role.id, admin_role_path(role.id) %>
                </td>
                <td>
                  <%= role.name %>
                </td>
                <td>
                  <%= link_to admin_role_path(role.id) do %>
                    <span class="glyphicon glyphicon-eye-open"></span>
                  <% end %>
                  |
                  <%= link_to edit_admin_role_path(role.id) do %>
                    <span class="glyphicon glyphicon-pencil"></span>
                  <% end %>
                  |
                  <%= link_to admin_role_path(role.id), method: :delete, data: {confirm: "Are you Sure ?"}  do %>
                      <span class="glyphicon glyphicon-trash"></span>
                    <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
          <strong>
            <%= will_paginate @roles   %>
          </strong>
            <%= link_to new_admin_role_path, class: "btn btn-info" do    %>
              <i class="glyphicon glyphicon-plus"></i>
              <strong>Add Role</strong>
          <% end %>
      </div>
    </div>
</div>
        